<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment_recipe_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_recipe_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="추천 레시피"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_write_recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#60BA62"
            android:text="레시피 작성" />

        <Button
            android:id="@+id/button_list_recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:text="레시피 보기"
            android:textColor="#000000"
            android:textColorHint="#000000" />

        <Button
            android:id="@+id/recommend_recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#60BA62"
            android:text="오늘의 레시피 추천" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="두부스테이크"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="373dp"
            android:src="@drawable/recommend1" />

    </LinearLayout>
</FrameLayout>